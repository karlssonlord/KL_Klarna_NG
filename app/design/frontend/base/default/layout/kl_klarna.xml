<?xml version="1.0"?>
<layout version="0.1.0">
    <checkout_onepage_index>
        <reference name="head">
            <block type="page/html_head" name="klarna_head" as="klarna_head" template="klarna/checkout/scripts.phtml"/>
            <action method="addItem"><type>skin_js</type><name>js/kl_klarna.js</name></action>
        </reference>
        <reference name="content">
            <block type="klarna/fetch" name="klarna_fetch_address" as="klarna_fetch_address" before="checkout.payment.methods" template="klarna/address/fetch.phtml"/>
        </reference>
    </checkout_onepage_index>
    <klklarna_checkout_index>
        <reference name="content">
            <block type="klarna/checkout_klarna_shipping" name="klarna_select_shipping" as="klarna_select_shipping" template="klarna/checkout/shipping.phtml"/>
            <block type="klarna/checkout_klarna_checkout" name="klarna_checkout" as="klarna_checkout" template="klarna/checkout/checkout.phtml"/>
        </reference>
    </klklarna_checkout_index>
</layout>
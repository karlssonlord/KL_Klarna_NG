<?xml version="1.0"?>
<config>
    <modules>
        <KL_Klarna>
            <version>0.0.5</version>
        </KL_Klarna>
    </modules>
    <frontend>
        <routers>
            <klklarna>
                <use>standard</use>
                <args>
                    <module>KL_Klarna</module>
                    <frontName>klarna</frontName>
                </args>
            </klklarna>
        </routers>
        <layout>
            <updates>
                <klarna module="kl_klarna">
                    <file>kl_klarna.xml</file>
                </klarna>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <klarna>
                <class>KL_Klarna_Block</class>
            </klarna>
            <adminhtml>
                <rewrite>
                    <sales_order_totals>KL_Klarna_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
                </rewrite>
                <rewrite>
                    <sales_order_invoice_totals>KL_Klarna_Block_Adminhtml_Sales_Order_Invoice_Totals
                    </sales_order_invoice_totals>
                </rewrite>
            </adminhtml>
            <checkout>
                <rewrite>
                    <onepage_link>KL_Klarna_Block_Checkout_Onepage_Link</onepage_link>
                    <cart_sidebar>KL_Klarna_Block_Checkout_Cart_Sidebar</cart_sidebar>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <klarna>
                <class>KL_Klarna_Helper</class>
            </klarna>
        </helpers>
        <models>
            <klarna>
                <class>KL_Klarna_Model</class>
                <resourceModel>klarna_resource</resourceModel>
            </klarna>
            <klarna_resource>
                <class>KL_Klarna_Model_Resource</class>
                <entities>
                    <pclass>
                        <table>klarna_pclass</table>
                    </pclass>
                </entities>
            </klarna_resource>
        </models>
        <resources>
            <klklarna_setup>
                <setup>
                    <module>KL_Klarna</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </klklarna_setup>
            <klklarna_setup>
                <connection>
                    <use>core_write</use>
                </connection>
            </klklarna_setup>
            <klklarna_setup>
                <connection>
                    <use>core_read</use>
                </connection>
            </klklarna_setup>
        </resources>
        <sales>
            <quote>
                <totals>
                    <klarna_total>
                        <class>KL_Klarna_Model_Totals_Address</class>
                        <after>shipping</after>
                        <before>grand_total,tax</before>
                    </klarna_total>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <klarna_total>
                        <class>KL_Klarna_Model_Totals_Invoice</class>
                        <after>shipping</after>
                        <before>grand_total,tax</before>
                    </klarna_total>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <klarna_total>
                        <class>KL_Klarna_Model_Totals_Creditmemo</class>
                        <after>shipping</after>
                        <before>grand_total,tax</before>
                    </klarna_total>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <klarna_total translate="title">
                    <title>Invoice fee:</title>
                    <source_field>base_klarna_total</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>450</sort_order>
                </klarna_total>
            </totals>
        </pdf>
        <fieldsets>
            <sales_convert_quote_address>
                <base_klarna_total>
                    <to_order>*</to_order>
                </base_klarna_total>
                <klarna_total>
                    <to_order>*</to_order>
                </klarna_total>
            </sales_convert_quote_address>
            <sales_convert_quote>
                <base_klarna_total>
                    <to_order>*</to_order>
                </base_klarna_total>
                <klarna_total>
                    <to_order>*</to_order>
                </klarna_total>
                <klarna_checkout>
                    <to_order>*</to_order>
                </klarna_checkout>
            </sales_convert_quote>
            <sales_convert_order>
                <base_klarna_total>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </base_klarna_total>
                <klarna_total>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </klarna_total>
            </sales_convert_order>
        </fieldsets>
        <events>
            <admin_system_config_changed_section_payment>
                <observers>
                    <klarna>
                        <type>singleton</type>
                        <class>klarna/observer</class>
                        <method>adminSystemConfigChangedSectionPayment</method>
                    </klarna>
                </observers>
            </admin_system_config_changed_section_payment>
        </events>
    </global>
    <klarna>
        <countries>
            <se>
                <code>SE</code>
                <currency>SEK</currency>
                <name>Sweden</name>
                <language>SV</language>
                <can_search_address>1</can_search_address>
            </se>
            <dk>
                <code>DK</code>
                <currency>DKK</currency>
                <name>Denmark</name>
                <language>DA</language>
                <can_search_address>0</can_search_address>
            </dk>
        </countries>
    </klarna>
    <klarna_checkout>
        <countries>
            <se>
                <code>SE</code>
                <currency>SEK</currency>
                <name>Sweden (SEK)</name>
                <language>sv-se</language>
            </se>
            <no>
                <code>NO</code>
                <currency>NOK</currency>
                <name>Norway (NOK)</name>
                <language>nb-no</language>
            </no>
            <fi>
                <code>FI</code>
                <currency>EUR</currency>
                <name>Finland (EUR)</name>
                <language>fi-fi</language>
            </fi>
            <de>
                <code>DE</code>
                <currency>EUR</currency>
                <name>Germany (EUR)</name>
                <language>de-de</language>
            </de>
        </countries>
    </klarna_checkout>
    <default>
        <payment>
            <klarna>
                <live>0</live>
                <debug>1</debug>
                <emailinvoice>1</emailinvoice>
                <postalinvoice>0</postalinvoice>
                <klarnajs>1</klarnajs>
                <address_separator_br>1</address_separator_br>
            </klarna>
            <klarna_invoice>
                <title>Klarna Invoice</title>
                <active>0</active>
                <model>klarna/payment_invoice</model>
                <payment_action>authorize</payment_action>
                <fee>0</fee>
            </klarna_invoice>
            <klarna_partpayment>
                <title>Klarna Account</title>
                <active>0</active>
                <model>klarna/payment_partpayment</model>
                <payment_action>authorize</payment_action>
            </klarna_partpayment>
            <klarna_specpayment>
                <active>0</active>
                <model>klarna/payment_specpayment</model>
                <payment_action>authorize</payment_action>
            </klarna_specpayment>
            <klarna_checkout>
                <active>0</active>
            </klarna_checkout>
        </payment>
    </default>
</config>
<?xml version="1.0"?>
<config>
    <modules>
        <KL_Klarna>
            <version>0.1.0</version>
        </KL_Klarna>
    </modules>
    <global>
        <helpers>
            <klarna>
                <class>KL_Klarna_Helper</class>
            </klarna>
        </helpers>
        <models>
            <klarna>
                <class>KL_Klarna_Model</class>
            </klarna>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <klarna>
                    <files>
                        <default>KL_Klarna.csv</default>
                    </files>
                </klarna>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <klarna_invoice>
                <title>Klarna Invoice</title>
                <active>0</active>
                <debug>0</debug>
                <model>klarna/invoice</model>
                <payment_action>authorize</payment_action>
            </klarna_invoice>
        </payment>
    </default>
</config>

<?xml version="1.0"?>
<config>
    <modules>
        <KL_Klarna>
            <!-- Please see ./app/code/community/KL/Klarna/Model/Payment/Checkout.php -->
            <version>0.0.8</version>
            <!-- If not changed, invoiced will be incorrectly created without discounts! -->
        </KL_Klarna>
    </modules>
    <frontend>
        <routers>
            <klklarna>
                <use>standard</use>
                <args>
                    <module>KL_Klarna</module>
                    <frontName>klarna</frontName>
                </args>
            </klklarna>
        </routers>
        <layout>
            <updates>
                <klarna module="kl_klarna">
                    <file>kl_klarna.xml</file>
                </klarna>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminklarna>
                <use>admin</use>
                <args>
                    <module>KL_Klarna</module>
                    <frontName>admin_klarna</frontName>
                </args>
            </adminklarna>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <adminklarna module="klarna">
                <title>Klarna</title>
                <sort_order>100</sort_order>
                <children>
                    <klarnalog module="klarna">
                        <title>Manage Klarnalog</title>
                        <sort_order>0</sort_order>
                        <action>admin_klarna/adminhtml_klarnalog</action>
                    </klarnalog>
                </children>
            </adminklarna>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <adminklarna translate="title" module="klarna">
                            <title>Klarna</title>
                            <sort_order>1000</sort_order>
                            <children>
                                <klarnalog translate="title">
                                    <title>Manage Klarnalog</title>
                                    <sort_order>0</sort_order>
                                </klarnalog>
                            </children>
                        </adminklarna>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <adminklarna>
                    <file>kl_klarna.xml</file>
                </adminklarna>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <klarna>
                <class>KL_Klarna_Block</class>
            </klarna>
            <adminhtml>
                <rewrite>
                    <sales_order_totals>KL_Klarna_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
                </rewrite>
                <rewrite>
                    <sales_order_invoice_totals>KL_Klarna_Block_Adminhtml_Sales_Order_Invoice_Totals
                    </sales_order_invoice_totals>
                </rewrite>
            </adminhtml>
            <checkout>
                <rewrite>
                    <onepage_link>KL_Klarna_Block_Checkout_Onepage_Link</onepage_link>
                    <cart_sidebar>KL_Klarna_Block_Checkout_Cart_Sidebar</cart_sidebar>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <klarna>
                <class>KL_Klarna_Helper</class>
            </klarna>
        </helpers>
        <models>
            <klarna>
                <class>KL_Klarna_Model</class>
                <resourceModel>klarna_resource</resourceModel>
            </klarna>
            <klarna_resource>
                <class>KL_Klarna_Model_Resource</class>
                <entities>
                    <pclass>
                        <table>klarna_pclass</table>
                    </pclass>
                    <pushlock>
                        <table>klarna_pushlock</table>
                    </pushlock>
                    <klarnalog>
                        <table>klarna_log</table>
                    </klarnalog>
                </entities>
            </klarna_resource>
        </models>
        <resources>
            <klklarna_setup>
                <setup>
                    <module>KL_Klarna</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </klklarna_setup>
            <klklarna_setup>
                <connection>
                    <use>core_write</use>
                </connection>
            </klklarna_setup>
            <klklarna_setup>
                <connection>
                    <use>core_read</use>
                </connection>
            </klklarna_setup>
        </resources>
        <sales>
            <quote>
                <totals>
                    <klarna_total>
                        <class>KL_Klarna_Model_Totals_Address</class>
                        <after>shipping</after>
                        <before>grand_total,tax</before>
                    </klarna_total>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <klarna_total>
                        <class>KL_Klarna_Model_Totals_Invoice</class>
                        <after>shipping</after>
                        <before>grand_total,tax</before>
                    </klarna_total>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <klarna_total>
                        <class>KL_Klarna_Model_Totals_Creditmemo</class>
                        <after>shipping</after>
                        <before>grand_total,tax</before>
                    </klarna_total>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <klarna_total translate="title">
                    <title>Invoice fee:</title>
                    <source_field>base_klarna_total</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>450</sort_order>
                </klarna_total>
            </totals>
        </pdf>
        <fieldsets>
            <sales_convert_quote_address>
                <base_klarna_total>
                    <to_order>*</to_order>
                </base_klarna_total>
                <klarna_total>
                    <to_order>*</to_order>
                </klarna_total>
            </sales_convert_quote_address>
            <sales_convert_quote>
                <base_klarna_total>
                    <to_order>*</to_order>
                </base_klarna_total>
                <klarna_total>
                    <to_order>*</to_order>
                </klarna_total>
                <klarna_checkout>
                    <to_order>*</to_order>
                </klarna_checkout>
                <order_comment>
                    <to_order>*</to_order>
                </order_comment>
                <newsletter_subscription>
                    <to_order>*</to_order>
                </newsletter_subscription>
            </sales_convert_quote>
            <sales_convert_order>
                <base_klarna_total>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </base_klarna_total>
                <klarna_total>
                    <to_invoice>*</to_invoice>
                    <to_cm>*</to_cm>
                </klarna_total>
            </sales_convert_order>
        </fieldsets>
        <events>
            <admin_system_config_changed_section_payment>
                <observers>
                    <klarna>
                        <type>singleton</type>
                        <class>klarna/observer</class>
                        <method>adminSystemConfigChangedSectionPayment</method>
                    </klarna>
                </observers>
            </admin_system_config_changed_section_payment>
            <cart_json_response>
                <observers>
                    <klarna_checkout_cart>
                        <type>singleton</type>
                        <class>klarna/observer</class>
                        <method>handleOrder</method>
                    </klarna_checkout_cart>
                </observers>
            </cart_json_response>
            <checkout_json_response>
                <observers>
                    <klarna_checkout_checkout>
                        <type>singleton</type>
                        <class>klarna/observer</class>
                        <method>handleOrder</method>
                    </klarna_checkout_checkout>
                </observers>
            </checkout_json_response>
            <checkout_quote_init>
                <observers>
                    <klarna_as_default>
                        <type>model</type>
                        <class>klarna/observer</class>
                        <method>setDefaultPaymentMethod</method>
                    </klarna_as_default>
                </observers>
            </checkout_quote_init>
            <controller_action_predispatch_klklarna_checkout_index>
                <observers>
                    <klarna_checkout_checkout>
                        <type>singleton</type>
                        <class>klarna/observer</class>
                        <method>preDispatchCheckout</method>
                    </klarna_checkout_checkout>
                </observers>
            </controller_action_predispatch_klklarna_checkout_index>
            <customer_login>
                <observers>
                    <klarna_checkout_checkout>
                        <type>singleton</type>
                        <class>klarna/observer</class>
                        <method>customerLoginLogout</method>
                    </klarna_checkout_checkout>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <klarna_checkout_checkout>
                        <type>singleton</type>
                        <class>klarna/observer</class>
                        <method>customerLoginLogout</method>
                    </klarna_checkout_checkout>
                </observers>
            </customer_logout>
        </events>
        <template>
            <email>
                <kl_klarna module="Core">
                    <label>KL Klarna Error Notification</label>
                    <file>kl/klarna/notification.html</file>
                    <type>html</type>
                </kl_klarna>
            </email>
        </template>
    </global>
    <klarna>
        <countries>
            <se>
                <code>SE</code>
                <currency>SEK</currency>
                <name>Sweden</name>
                <language>SV</language>
                <can_search_address>1</can_search_address>
            </se>
            <dk>
                <code>DK</code>
                <currency>DKK</currency>
                <name>Denmark</name>
                <language>DA</language>
                <can_search_address>0</can_search_address>
            </dk>
            <no>
                <code>NO</code>
                <currency>NOK</currency>
                <name>Norway</name>
                <language>NB</language>
                <can_search_address>0</can_search_address>
            </no>
            <fi>
                <code>FI</code>
                <currency>EUR</currency>
                <name>Finland</name>
                <language>FI</language>
                <can_search_address>0</can_search_address>
            </fi>
        </countries>
    </klarna>
    <klarna_checkout>
        <countries>
            <se>
                <code>SE</code>
                <currency>SEK</currency>
                <name>Sweden (SEK)</name>
                <language>sv-se</language>
            </se>
            <no>
                <code>NO</code>
                <currency>NOK</currency>
                <name>Norway (NOK)</name>
                <language>nb-no</language>
            </no>
            <fi>
                <code>FI</code>
                <currency>EUR</currency>
                <name>Finland (EUR)</name>
                <language>fi-fi</language>
            </fi>
            <de>
                <code>DE</code>
                <currency>EUR</currency>
                <name>Germany (EUR)</name>
                <language>de-de</language>
            </de>
        </countries>
    </klarna_checkout>
    <default>
        <payment>
            <klarna>
                <live>0</live>
                <debug>1</debug>
                <emailinvoice>1</emailinvoice>
                <postalinvoice>0</postalinvoice>
                <klarnajs>1</klarnajs>
                <address_separator_br>1</address_separator_br>
                <order_status>reserved</order_status>
            </klarna>
            <klarna_invoice>
                <title>Klarna Invoice</title>
                <active>0</active>
                <model>klarna/payment_invoice</model>
                <payment_action>authorize</payment_action>
                <fee>0</fee>
                <order_status>reserved</order_status>
            </klarna_invoice>
            <klarna_partpayment>
                <title>Klarna Account</title>
                <active>0</active>
                <model>klarna/payment_partpayment</model>
                <payment_action>authorize</payment_action>
                <order_status>reserved</order_status>
            </klarna_partpayment>
            <klarna_specpayment>
                <active>0</active>
                <model>klarna/payment_specpayment</model>
                <payment_action>authorize</payment_action>
            </klarna_specpayment>
            <klarna_checkout>
                <active>0</active>
                <model>klarna/payment_checkout</model>
                <acknowledged_order_status>processing</acknowledged_order_status>
            </klarna_checkout>
        </payment>
    </default>
    <crontab>
        <jobs>
            <kl_klarna>
                <schedule>
                    <cron_expr>0,15,30,45 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>klarna/cron_cleanpushlocktable::clean</model>
                </run>
            </kl_klarna>
            <kl_klarna_subscribe_customer_to_newsletter>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>klarna/cron_newsletter::subscribeCustomerToNewsletter</model>
                </run>
            </kl_klarna_subscribe_customer_to_newsletter>
        </jobs>
    </crontab>
</config>